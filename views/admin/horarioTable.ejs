<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <table class="table table-bordered border-primary">
     
        <thead>
          <tr>
            <th>DÃ­a</th>
            <% for (let i = 1; i <= 20; i++) { %>
            <th>Valor <%= i %></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% horarios.forEach( horario => { %>

          <tr>
            <td class="bg-warning"><%= horario.dia %></td>
            <% horario.horarios.forEach( hora => { %>
              <td class="<%= hora.id_horario ? 'bg-primary' : 'bg-success'  %>"> <%= hora.hora_inicio %>-<%= hora.hora_final %>-<%= hora.nameAula %>-<%= hora.nameCurso %>-<%= hora.namePersona %>-<%= hora.nameGrupo %> </td>
  
            <% }); %>
          </tr>
          <% }); %>

          
        </tbody>
      </table>
    </div>
  </body>
</html>
